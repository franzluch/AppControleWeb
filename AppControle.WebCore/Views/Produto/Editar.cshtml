@model AppControle.Domain.Entities.Estoque

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Estoque</h4>
<hr />
<div class="row">
    @{
        if (ViewBag.Errors != null)
        {
            @foreach (var item in ViewBag.Errors)
            {
                <div class="alert alert-danger" role="alert">
                    @item
                </div>

            }
        }
    }

    <div class="col-md-4">
        <form asp-action="Editar">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ProdutoId" value="@ViewBag.Produto?.Id" />
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label font-weight-bold">#@ViewBag.Produto?.Id</label>
            </div>

            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label">Descrição</label>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label font-weight-bold">@ViewBag.Produto?.Descricao</label>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
